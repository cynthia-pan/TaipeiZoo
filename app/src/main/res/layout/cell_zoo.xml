<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutTitle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cell_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/ivZooThumbnail"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/all_margin"
        android:layout_weight="1"
        android:scaleType="center" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/all_margin"
        android:layout_marginRight="@dimen/all_margin"
        android:layout_marginBottom="@dimen/all_margin"
        android:layout_toRightOf="@id/ivZooThumbnail"
        android:layout_weight="2">

        <RelativeLayout
            android:id="@+id/layoutInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_arrow"
            android:layout_marginBottom="@dimen/all_margin">

            <TextView
                android:id="@+id/tvZooName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/all_margin"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="@dimen/large_font" />

            <TextView
                android:id="@+id/tvZooInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvZooName"
                android:layout_marginBottom="@dimen/all_margin"
                android:ellipsize="end"
                android:maxLines="2" />

            <TextView
                android:id="@+id/tvZooMemo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvZooInfo" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_keyboard_arrow_right_black" />

    </RelativeLayout>

</LinearLayout>